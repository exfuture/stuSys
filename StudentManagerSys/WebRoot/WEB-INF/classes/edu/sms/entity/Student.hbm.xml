<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="edu.sms.entity.Student" table="student" lazy="false">
    	<id name="stuNo" column="stuno"   type="string"  >
            <!-- native Assigned  increment  identity uuid.hex  uuid.string foreign -->
            <generator class="assigned"/>
		</id>
	<property name="stuName" column="stuname" type="string"  length="10" not-null="true" />
	<property name="classNo" column="classno" type="string"  length="20" not-null="true" />

    </class>


</hibernate-mapping>